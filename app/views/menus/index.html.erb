<div class="col-6 mx-auto">
  <h1 class="my-3">トレーニングメニュー</h1>

  <% if @menus.empty? %>
    <div>
      <p>トレーニングメニューを作成してください</p>
      <%= link_to 'メニュー作成', new_menu_path, class: 'btn btn-primary text-white mt-3' %>
    </div>
  <% end %>

  <div class="menuWrapper">
    <% @menus.each do |menu| %>
      <div class="menu col-6">
        <div class="menu_header">
          <h2 class="menu_header_name">
            <%= link_to menu.name, menu_path(menu) %>
          </h2><!-- /.list_header_title -->

          <div class="menu_header_action">
            <%= link_to content_tag(:i, '', class: 'fas fa-pen'), edit_menu_path(menu) %>
            <%= link_to content_tag(:i, '', class: 'fas fa-trash'), menu_path(menu), method: :delete, data: { confirm: "#{menu.name}を削除してよろしいですか？" } %>
          </div>
        </div><!-- /.menu_header -->

        <p>インターバル : <%= menu.interval %>日</p>

        <% menu.exercises.each do |exercise| %>
          <ul>
            <li><%= link_to exercise.name, '#' %></li>
          </ul>
        <% end %>
      </div><!-- /.menu -->
    <% end %><!-- /@menus.each do |menu| -->
  </div><!-- /.menuWrapper -->
</div><!-- /.col-6 mx-auto -->
