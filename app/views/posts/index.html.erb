<div class="post-container mt-3">
  <h1 class="page-title mb-3">投稿一覧</h1>
  <% if @posts.empty? %>
    <p class="mb-2">投稿はありません</p>
    <%= link_to '新規作成', new_post_path, class: 'btn btn-primary text-white' %>
  <% else %>
    <div class="text-right">
      <%= link_to '新規作成', new_post_path, class: 'btn btn-primary text-white' %>
    </div><!-- /.text-right -->

    <% @posts.each do |post| %>
      <% @like = current_user.likes.find_by(post_id: post.id) %>
      <%= render 'partial/post_content', post: post %>
    <% end %>
  <% end %>

  <div class="mt-3">
    <%= paginate(@posts) %>
    <%= page_entries_info(@posts) %>
  </div><!-- /.mt-3 -->
</div><!-- /.container -->
