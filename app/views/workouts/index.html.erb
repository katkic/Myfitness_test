<div class="container">
  <h1 class="my-3">トレーニング記録</h1>

  <h2><%= @exercise.name %></h2>

  <nav class="navbar navbar-expand-sm my-3">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to 'メニュー', menus_path, class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to 'グラフ', '#', class: 'nav-link btn btn-default' %></li>
      <li class="nav-item"><%= link_to '新規作成', new_workout_path(exercise_id: @exercise.id), class: 'nav-link btn btn-primary text-white ml-5' %></li>
    </ul>
  </nav>

  <div class="workoutWrapper">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>日付</th>
          <th>セット</th>
          <th>最大重量</th>
          <th>1RM(MAX)</th>
          <th>合計重量</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @workouts.each do |workout| %>
          <tr>
            <td><%= link_to workout.created_at.strftime("%Y-%m-%d %H:%M"), workout_path(workout) %></td>
            <td><%= workout.exercise_logs.count %></td>
            <td>50<%#= workout.exercise_logs.weight %></td>
            <td>68.2<%#= workout.exercise_logs.weight %></td>
            <td>1575.0<%#= workout.exercise_logs.weight %></td>
            <td><%= link_to '編集', edit_workout_path(workout) %></td>
            <td><%= link_to '削除', workout_path(workout), method: :delete, data: { confirm: '削除してもよろしいですか？ '} %></td>
          </tr>
        <% end %><!-- /@worktous.each do |menu| -->
    </tr>
    </tbody>
    </table>
  </div><!-- /.workoutWrapper -->
</div><!-- /.col-6 mx-auto -->
